{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types/!(node)"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "paths":{
      "@src":["src"],
      "@src/*":["src/*"],
      "@app":["src/app"],
      "@app/*":["src/app/*"],
      "@shared":["src/app/shared"],
      "@shared/*":["src/app/shared/*"]
    },
    "jsx": "react"
  }
}
